<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
    <template id="assets_frontend" name="website guest aassets_frontend" inherit_id="website.assets_frontend">
		<xpath expr="." position="inside">
        <script type="text/javascript" src="/email_verification/static/src/js/email_verification.js"></script>
	    
        </xpath>
	</template>
   
    <template id="email_verification_inherited_checkout" inherit_id="website_sale.checkout" >
        <xpath expr="//div[@id ='wrap']/div/div/div/div[4]/a[2]" position="replace">
           <a id="restrict_checkout"  t-att-disabled="env.uid!= env.ref('base.public_user').id and website.check_email_is_validated() in ['unverified','expired']" class="btn btn-default btn-primary pull-right mb32" href="/shop/confirm_order">Confirm <span class="fa fa-long-arrow-right" /></a>
        </xpath>
    </template>

    <template id="layout" inherit_id="website.layout" name="Main layout">
    <xpath expr="//header//div[@class='navbar navbar-default navbar-static-top']" position="after">
        <div class="alert alert-warning text-center" t-if="website.check_email_is_validated() == 'unverified'" >
                <span>The account is not verified yet, you need to verify your account before proceeding further. If you want to re-send link </span>
                <a style="cursor:pointer" t-attf-href="/resend/email">click here</a>.
            </div>
            <div class="alert alert-warning text-center" t-if="website.check_email_is_validated() == 'expired'" >
                <span>The account is not verified yet, you need to verify your account before proceeding further. The link sent to your email has been expired, for sending a new link  </span>
                <a style="cursor:pointer" t-attf-href="/resend/email">click here</a>.
            </div>
    </xpath>
    </template>

    <template id="email_verification_template" name="Email Verification" >
        <div class="container">
            <div class="row" >
                <center style="margin-top:3%;">
                    <img src="/logo.png"/>
                </center>
                <div class="col-md-6 col-xs-6 col-sm-6 col-md-offset-3 msg_main" style="margin-top:7%">
                    <center style="margin-bottom:-10px">
                        <img t-if="status in ['verified','already_verified']" style="height:60px;" src="/email_verification/static/src/img/verified.png"/>
                        <img t-if="status in ['unverified','expired','error'] " style="height:60px;" src="/email_verification/static/src/img/error.png"/>
                    </center>
                    <center >
                        <h2 style="margin-bottom:5px;"><t t-esc="msg"/></h2>
                        <div id="loadImgWrap" style="display:none">
                            <img style="height:45px;" src="/email_verification/static/src/img/loader.GIF"/>
                        </div>
                        <input type="hidden" name="base_url" t-att-value="request.env['ir.config_parameter'].sudo().get_param('web.base.url')"/>
                        <input type="hidden" name="status" t-att-value="status"/>
                        <div style="margin-top:2px;" id="second_counter"></div>
                    </center>
                </div>
            </div>
        </div>  
       <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script> 
       <script src="/email_verification/static/src/js/template_view.js"></script>  
        
    </template>
  </data>
</odoo>