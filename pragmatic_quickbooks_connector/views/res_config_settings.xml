    <record id="view_quickbook_config_settings" model="ir.ui.view">
        <field name="name">Quickbooks Online Settings</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('app_settings_block')]" position="before">
                <div class="app_settings_block" data-string="Quickbooks" data-key="quickbooks_setting">
                    <h2 style="font-size:25px;background-color:#e9ecef;">
                        Quickbooks Online Settings
                    </h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="update_customer_export"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="update_customer_export" string="Update Customer While Export"/>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="update_customer_import"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="update_customer_import" string="Update Customer While Import"/>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="update_vendor_export"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="update_vendor_export" string="Update Vendor While Export"/>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="update_vendor_import"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="update_vendor_import" string="Update Vendor While Import"/>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="update_product_export"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="update_product_export" string="Update Product While Export"/>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="update_product_import"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="update_product_import" string="Update Product While Import"/>
                            </div>
                        </div>
                    </div>
                    
                </div>
            </xpath>
        </field>
    </record>
</odoo>