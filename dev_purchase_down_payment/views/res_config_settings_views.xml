<odoo>
    <record id="purchase_config_dev_purchase_down_payment_inherited" model="ir.ui.view">
        <field name="name">purchase.config.dev.purchase.down.payment.inherited</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='purchase']//h2[2]" position="before">
                <h2>Advance Payment Product</h2>
                <div class="row mt16 o_settings_container" name="down_payment_setting_container">
		            <div class="col-12 col-lg-6 o_setting_box">
						<div class="o_setting_left_pane"/>
	                    <div class="o_setting_right_pane">
	                    	<span class="o_form_label">Down Payment Product</span>
	                        <field name="down_payment_product_id" options="{'no_create_edit': True}" class="col-lg-12"/>
	                    </div>
					</div>
	            </div>
            </xpath>
        </field>
    </record>
</odoo>
