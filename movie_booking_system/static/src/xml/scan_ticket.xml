<?xml version="1.0" encoding="UTF-8"?>

<templates xml:space="preserve">

    <t t-name="scan_ticket">
        <div class="o_stock_barcode_main_menu_container o_home_menu_background">
            <div class="o_stock_barcode_main_menu position-relative">
                <a class="o_scan_barcode_menu d-block float-left"><i class="fa fa-chevron-left"></i></a>
                <h1 class="mb-4">Scan Ticket</h1>
                
                

                <div class="o_stock_barcode_container position-relative d-inline-block mt-4 mb-5">
                    <img src="/stock_barcode/static/img/barcode.png" alt="Barcode" class="img-fluid mb-1 mt-1"/>
                    <span class="o_stock_barcode_laser"/>
                </div>
                <div>

                    <ul class="text-left mb-sm-5 pl-4">
                        <li>Ticket : <t t-esc="widget.context.ticket_name"/></li>
                        <li>Day : <t t-esc="widget.context.day"/></li>
                        <li>Time : <t t-esc="widget.context.start_time"/></li>
                        <li>Current Date : <t t-esc="widget.context.current_date"/></li>
                        <li>Attended : <span id="attend"></span></li>
                    </ul>
                </div>

                <hr class="mb-4 d-none d-sm-block"/>

                <!-- <div class="row">
                    <div class="col">
                        <button class="button_simulation btn btn-block btn-primary mb-4 mb-sm-0">Simulate Scan</button>
                    </div>
                    <div class="col">
                        <button class="button_inventory btn btn-block btn-primary">Inventory Adjustments</button>
                    </div> 
                </div>-->
            </div>
        </div>
    </t>

</templates>
