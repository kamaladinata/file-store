<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="service_form_view" model="ir.ui.view">
		    <field name="name">Service Form View</field>
		    <field name="model">frg.service</field>
		    <field name="type">form</field>
		    <field name="arch" type="xml">
		       	<form string="Create Service">
		            <sheet>
		            	<group col='4'>
		            		<field name='product_id'/>
		            		<field name='name'/>
		                	<field name='curr_id' />
		                	<field name='cost' />
		                	<field name='sale' />
	                		<field name='vendor_id'/>
	                		<field name='main' />
	                		<field name='lump_sum' attrs="{'invisible': [('shippment_type', '=', 'LCL')]}"/>
	                		<field name='uom' attrs="{'invisible': [('shippment_type', '=', 'FCL')]}"/>
	                		<field name='routing_id' invisible='1'/>
	                		<field name='operation_id' invisible='1'/>
	                		<field name='shippment_type' invisible='1'/>
	                	</group>
		            </sheet>
		        </form>
		    </field>
		</record>
	</data>
</odoo>