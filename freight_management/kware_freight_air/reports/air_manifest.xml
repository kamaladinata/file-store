<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<report	id="air_manifest"	
		string="Air Manifest"	
		model="frg.operation"	
		report_type="qweb-html"	
		name="kware_freight_air.report_air_manifest_template"
	/>
	<template id="report_air_manifest_template">
		<t t-call="web.html_container">	
			<t t-call="web.external_layout">	
				<div class="page">
					<h3>Air Manifest</h3>
					<t t-foreach="docs"	t-as="doc">
						<t t-if="doc.transport=='air' and doc.operation_type=='master'">
							<div calss="consignee" style="border:1px solid black;height:150px;width:220px;padding:5px;float:left;margin-top:50px">
								<h5>To: <span t-field="doc.consignee_id.name"/></h5>
								<p t-field="doc.consignee_id.street"></p>
								<p t-field="doc.consignee_id.country_id"></p>
								<p t-field="doc.consignee_id.city"></p>
								<p t-field="doc.consignee_id.zip"></p>
							</div>

							<table class="table" style="margin-top:50px;float:left;margin-left:100px;width:600px;height:150px">
								<tr col="4">
									<td colspan="1" style="padding:10px;"><strong>MWAB</strong></td>
									<td colspan="1" style="padding:10px;"><span t-field="doc.mwab_no"/></td>
									<td colspan="1" style="padding:10px;"><strong>Flight No</strong></td>
									<td colspan="1" style="padding:10px;"><span t-field="doc.flight_no"/></td>
								</tr>
								<tr col="4">
									<td colspan="1" style="padding:10px;"><strong>Airline</strong></td>
									<td colspan="1" style="padding:10px;"><span t-field="doc.airline_id"/></td>
									<td colspan="1" style="padding:10px;"><strong>Departure</strong></td>
									<td colspan="1" style="padding:10px;"><span t-field="doc.load_port_id"/></td>
								</tr>
								<tr col="4">
									<td colspan="1" style="padding:10px;"><strong>Flight Date</strong></td>
									<td colspan="1" style="padding:10px;"><span t-field="doc.mwab_date"/></td>
									<td colspan="1" style="padding:10px;"><strong>Destination</strong></td>
									<td colspan="1" style="padding:10px;"><span t-field="doc.discharge_port_id"/></td>
								</tr>																								
							</table>

							<table style="margin-top:50px;border:1px solid black" class="table">
								<tr style="border:1px solid black">
									<th style="border:1px solid black;padding:10px">Shippment</th>
									<th style="border:1px solid black;padding:10px">Shipper</th>
									<th style="border:1px solid black;padding:10px">Consignee</th>
									<th style="border:1px solid black;padding:10px">Destination</th>
									<th style="border:1px solid black;padding:10px">Pieces</th>
									<th style="border:1px solid black;padding:10px">Gross weight</th>
									<th style="border:1px solid black;padding:10px">Description</th>
								</tr>
								<tr style="padding:10px;border:1px solid black;">
									<t t-foreach="doc.child_ids" t-as="child">
									    <td style="padding:10px;border:1px solid black;"><span t-field="child.hwab_no" /></td>
									    <td style="padding:10px;border:1px solid black;"><span t-field="child.shipper_id" /></td>
									    <td style="padding:10px;border:1px solid black;"><span t-field="child.consignee_id" /></td>
									    <td style="padding:10px;border:1px solid black;"><span t-field="child.discharge_port_id" /></td>
									    <td style="padding:10px;border:1px solid black;"><span t-field="child.total_orders" /></td>
									    <td style="padding:10px;border:1px solid black;"><span t-field="child.total_weight" /></td>
									    <td style="padding:10px;border:1px solid black;"><span t-field="child.note" /></td>
									</t>
								</tr>
								<tr style="border: 1px solid black;padding:10px">
									<td style="border:1px solid black;padding:10px">Total</td>
									<td style="border:1px solid black;padding:10px"></td>
									<td style="border:1px solid black;padding:10px"></td>
									<td style="border:1px solid black;padding:10px"></td>
									<td style="border:1px solid black;padding:10px">2</td>
									<td style="border:1px solid black;padding:10px">500.100</td>
									<td style="border:1px solid black;padding:10px"></td>
								</tr>
							</table>
						</t>
					</t>
				</div>
			</t>
		</t>				
	</template>
</odoo>