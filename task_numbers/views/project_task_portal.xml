<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="portal_my_tasks"
              inherit_id="project.portal_my_tasks"
    >
        <xpath expr="//span[@t-esc='task.id']" position="replace">
            <span t-esc="task.un_reference"/>
        </xpath>
    </template>

    <template id="portal_my_task"
              inherit_id="project.portal_my_task"
    >
        <xpath expr="//h5/small[hasclass('text-muted')]" position="replace">
            <small class="text-muted"> (#<span t-field="task.un_reference"/>)</small>
        </xpath>
    </template>

</odoo>
